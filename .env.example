# .env.example (improved)
# Database (use references instead of actual values)
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}"

# Authentication (use references)
JWT_SECRET="${GENERATED_JWT_SECRET}"
JWT_EXPIRY="7d"

# CSRF Protection
CSRF_SECRET="${GENERATED_CSRF_SECRET}"

# SEC API
SEC_API_EMAIL="${YOUR_EMAIL}"

# Email
EMAIL_SERVER_HOST="${SMTP_HOST}"
EMAIL_SERVER_PORT="${SMTP_PORT}"
EMAIL_SERVER_USER="${SMTP_USER}"
EMAIL_SERVER_PASSWORD="${SMTP_PASSWORD}"
EMAIL_FROM="${FROM_EMAIL}"

# Stripe
STRIPE_PUBLISHABLE_KEY="${STRIPE_PUBLIC_KEY}"
STRIPE_SECRET_KEY="${STRIPE_SECRET_KEY}"
STRIPE_WEBHOOK_SECRET="${STRIPE_WEBHOOK_SECRET}"

# Supabase (for production)
SUPABASE_URL="${SUPABASE_URL}"
SUPABASE_ANON_KEY="${SUPABASE_ANON_KEY}"
SUPABASE_SERVICE_ROLE_KEY="${SUPABASE_SERVICE_ROLE_KEY}"

# Development
SKIP_AUTH="false" # Set to "true" only in development
